{
  "compilerOptions": {
    "strict": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "jsxImportSource": "solid-js",
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "target": "es2018",
    "allowSyntheticDefaultImports": true,
    "paths": { "@/*": ["./src/*"] }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
